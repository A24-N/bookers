<h1>Editing Book</h1>

  <% if @book.errors.any? %>
  <div class="error-message">
    <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="editing-book">
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="field">
    <label for="book-title">Title</label>
    <br>
    <%= f.text_field :title,class: "book-title" %>
  </div>

  <div class="field">
    <label for="book-body">Body</label>
    <br>
    <%= f.text_area :body,class: "book-body" %>
  </div>

    <%= f.submit 'Update Book', class: "submit-btn" %>
  <% end %>
</div>

<%= link_to "Show", book_path(@book.id) %>
