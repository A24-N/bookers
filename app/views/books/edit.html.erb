<h1>Editing Book</h1>

  <% if @book.errors.any? %>
  <div class="error-message">
    <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="editing-book">
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title,class: "text_field" %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body,class: "text_erea" %>
  </div>

    <%= f.submit 'Update Book', class: "submit-btn" %>
  <% end %>
</div>

