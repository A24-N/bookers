<p class="flash">
  <%= flash[:notice] %>
</p>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id), class: "show#{book.id}" %></td>
      <td><%= link_to "Edit", edit_book_path(book.id), class: "edit#{book.id}" %></td>
      <td><%= link_to "Destroy", book_path(book.id), class: "destroy#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
  <% if @book.errors.any? %>
  <div class="error-message">
    <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="new-book">
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="field">
    <label for="book-title">Title</label>
    <br>
    <%= f.text_field :title,class: "book-title" %>
  </div>

  <div class="field">
    <label for="book-body">Body</label>
    <br>
    <%= f.text_area :body,class: "book-body" %>
  </div>

    <%= f.submit 'Create Book', class: "submit-btn" %>
  <% end %>
</div>
